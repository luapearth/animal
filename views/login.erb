<div id="content-area">

	<div class="col-md-offset-1 col-md-4">
		<hgroup>
			<h1 class="title text-center">
			Welcome to <%= @title %>.
			<a href="/animal" class="animal-link">
			<h2 class="title text-center">
				<i class="fa fa-street-view fa-3x"></i>
			</h2>
			</a>
			<h2 class="sub-title text-center">Connect with your friends</h2>
		</hgroup>
	</div>
	<div class="col-md-4 col-md-offset-2">
		<% if !flash[:error].nil? %>
			<div class="alert alert-warning">
				<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
					<strong>Login Error: </strong> <br> <%= flash[:error] %>
				</div>
		<% end %>

		<% if !flash[:message].nil? %>
			<div class="alert alert-success">
				<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
					<%= flash[:message] %>
				</div>
		<% end %>

		<form action="/login" method="post" role="form">
			<div class="form-group">
				<input type="text" class="form-control" placeholder="Username or email" name="username" id="username">
			</div>
			<div class="form-group">
				<input type="password" class="form-control" placeholder="Password" name="password" id="password">
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-primary btn-wide"><i class="fa fa-sign-in"></i> Log in</button>
			</div>
			<!-- <div class="form-group">
				<a href="/fblogin" class="btn btn-wide btn-fb"><i class="fa fa-facebook-official"></i> Sign in using Facebook</a>
			</div> -->
		</form>
		<br>
		<form action="/register" method="post" role="form">
			<div class="form-group">
				<input type="text" class="form-control" placeholder="Fullname" name="reg_fullname" id="reg_fullname">
			</div>
			<div class="form-group">
				<input type="text" class="form-control" placeholder="Username or email" name="reg_username" id="reg_username">
			</div>
			<div class="form-group">
				<input type="password" class="form-control" placeholder="Password" name="reg_password" id="reg_password">
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-success btn-wide"><i class="fa fa-sign-in"></i> Sign Up</button>
			</div>
		</form>
	</div>

</div>